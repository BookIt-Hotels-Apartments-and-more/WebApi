{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Enrichers.Thread" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} | {Level:u3} | T{ThreadId} | {SourceContext:l} | {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} | {Level:u3} | T{ThreadId} | {SourceContext:l} | {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ 
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId",
      "WithProperty"
    ]
  },
  "LogSettings": {
    "LogFolder": "Logs",
    "RetainedFileCountLimit": 30
  },
